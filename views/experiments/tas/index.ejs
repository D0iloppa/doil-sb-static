    <script>
        const video = document.getElementById('video');
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');
        const asciiOutput = document.getElementById('ascii-output');
        const startBtn = document.getElementById('start-btn');
        const stopBtn = document.getElementById('stop-btn');
        const photoBtn = document.getElementById('photo-btn');
        const recordBtn = document.getElementById('record-btn');
        const resolutionSlider = document.getElementById('resolution');
        const resolutionValue = document.getElementById('resolution-value');
        const status = document.getElementById('status');
        
        let stream = null;
        let animationId = null;
        let mediaRecorder = null;
        let recordedChunks = [];
        let isRecording = false;
        
        // ASCII ë¬¸ìë“¤ (ì–´ë‘ìš´ ê²ƒë¶€í„° ë°ì€ ê²ƒ ìˆœì„œ) - ì ì ˆí•œ ì„¸ë°€í•¨ì„ ìœ„í•´ 30ê°œ
        const asciiChars = " .'`,:;Il!i><~+-?1)(|\\/tfjrxn#MW&8%B@$";
        
        // í•´ìƒë„ ìŠ¬ë¼ì´ë” ì—…ë°ì´íŠ¸
        resolutionSlider.addEventListener('input', (e) => {
            resolutionValue.textContent = e.target.value;
        });
        
        // ì¹´ë©”ë¼ ì‹œì‘
        startBtn.addEventListener('click', async () => {
            try {
                status.textContent = "ì¹´ë©”ë¼ ê¶Œí•œì„ ìš”ì²­ì¤‘...";
                
                // ëª¨ë°”ì¼ì— ìµœì í™”ëœ ì¹´ë©”ë¼ ì„¤ì •
                const constraints = {
                    video: {
                        facingMode: 'environment', // í›„ë©´ ì¹´ë©”ë¼ ìš°ì„ 
                        width: { ideal: 640 },
                        height: { ideal: 480 }
                    }
                };
                
                stream = await navigator.mediaDevices.getUserMedia(constraints);
                video.srcObject = stream;
                
                video.addEventListener('loadedmetadata', () => {
                    canvas.width = video.videoWidth;
                    canvas.height = video.videoHeight;
                    startAsciiConversion();
                });
                
                startBtn.disabled = true;
                stopBtn.disabled = false;
                photoBtn.disabled = false;
                recordBtn.disabled = false;
                status.textContent = "ì¹´ë©”ë¼ ì‹¤í–‰ì¤‘ - ASCII ë³€í™˜ì¤‘...";
                
            } catch (error) {
                console.error('ì¹´ë©”ë¼ ì ‘ê·¼ ì˜¤ë¥˜:', error);
                status.textContent = "ì¹´ë©”ë¼ ì ‘ê·¼ ì‹¤íŒ¨. ê¶Œí•œì„ í™•ì¸í•´ì£¼ì„¸ìš”.";
            }
        });
        
        // ì¹´ë©”ë¼ ì •ì§€
        stopBtn.addEventListener('click', () => {
            stopCamera();
        });
        
        function stopCamera() {
            if (stream) {
                stream.getTracks().forEach(track => track.stop());
                stream = null;
            }
            
            if (animationId) {
                cancelAnimationFrame(animationId);
                animationId = null;
            }
            
            if (isRecording) {
                stopRecording();
            }
            
            startBtn.disabled = false;
            stopBtn.disabled = true;
            photoBtn.disabled = true;
            recordBtn.disabled = true;
            status.textContent = "ì¹´ë©”ë¼ê°€ ì •ì§€ë˜ì—ˆìŠµë‹ˆë‹¤.";
            asciiOutput.textContent = "";
        }
        
        // ì‚¬ì§„ ì´¬ì˜ ê¸°ëŠ¥
        photoBtn.addEventListener('click', () => {
            takePhoto();
        });
        
        // ë™ì˜ìƒ ì´¬ì˜ ê¸°ëŠ¥
        recordBtn.addEventListener('click', () => {
            if (isRecording) {
                stopRecording();
            } else {
                startRecording();
            }
        });
        
        function takePhoto() {
            // ASCII ì¶œë ¥ í™”ë©´ì„ ìº”ë²„ìŠ¤ë¡œ ë³€í™˜í•´ì„œ ì´ë¯¸ì§€ë¡œ ì €ì¥
            const tempCanvas = document.createElement('canvas');
            const tempCtx = tempCanvas.getContext('2d');
            
            // ASCII í…ìŠ¤íŠ¸ë¥¼ ì´ë¯¸ì§€ë¡œ ë³€í™˜
            const asciiText = asciiOutput.textContent;
            const lines = asciiText.split('\n');
            const fontSize = 8;
            const lineHeight = 6;
            
            tempCanvas.width = lines[0] ? lines[0].length * (fontSize * 0.6) : 800;
            tempCanvas.height = lines.length * lineHeight;
            
            // ë°°ê²½ì„ ê²€ì€ìƒ‰ìœ¼ë¡œ
            tempCtx.fillStyle = '#000000';
            tempCtx.fillRect(0, 0, tempCanvas.width, tempCanvas.height);
            
            // ASCII í…ìŠ¤íŠ¸ë¥¼ ë…¹ìƒ‰ìœ¼ë¡œ ê·¸ë¦¬ê¸°
            tempCtx.fillStyle = '#00ff00';
            tempCtx.font = `${fontSize}px 'Courier New', monospace`;
            tempCtx.textBaseline = 'top';
            
            lines.forEach((line, index) => {
                tempCtx.fillText(line, 0, index * lineHeight);
            });
            
            // ì´ë¯¸ì§€ë¡œ ë‹¤ìš´ë¡œë“œ
            const link = document.createElement('a');
            link.download = `ascii-art-${new Date().getTime()}.png`;
            link.href = tempCanvas.toDataURL();
            link.click();
            
            status.textContent = "ì‚¬ì§„ì´ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤!";
            setTimeout(() => {
                status.textContent = "ì¹´ë©”ë¼ ì‹¤í–‰ì¤‘ - ASCII ë³€í™˜ì¤‘...";
            }, 2000);
        }
        
        function startRecording() {
            if (!stream) return;
            
            recordedChunks = [];
            mediaRecorder = new MediaRecorder(stream, {
                mimeType: 'video/webm;codecs=vp9'
            });
            
            mediaRecorder.ondataavailable = (event) => {
                if (event.data && event.data.size > 0) {
                    recordedChunks.push(event.data);
                }
            };
            
            mediaRecorder.onstop = () => {
                const blob = new Blob(recordedChunks, {
                    type: 'video/webm'
                });
                const url = URL.createObjectURL(blob);
                const link = document.createElement('a');
                link.href = url;
                link.download = `ascii-video-${new Date().getTime()}.webm`;
                link.click();
                URL.revokeObjectURL(url);
                
                status.textContent = "ë™ì˜ìƒì´ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤!";
                setTimeout(() => {
                    status.textContent = "ì¹´ë©”ë¼ ì‹¤í–‰ì¤‘ - ASCII ë³€í™˜ì¤‘...";
                }, 2000);
            };
            
            mediaRecorder.start();
            isRecording = true;
            recordBtn.textContent = "â¹ï¸ ì´¬ì˜ ì¤‘ì§€";
            recordBtn.style.background = "#ff0000";
            status.textContent = "ğŸ”´ ë™ì˜ìƒ ì´¬ì˜ ì¤‘...";
        }
        
        function stopRecording() {
            if (mediaRecorder && isRecording) {
                mediaRecorder.stop();
                isRecording = false;
                recordBtn.textContent = "ğŸ¥ ë™ì˜ìƒ ì´¬ì˜";
                recordBtn.style.background = "#0f0";
            }
        }
        
        function startAsciiConversion() {
            function convert() {
                if (!video.videoWidth || !video.videoHeight) {
                    animationId = requestAnimationFrame(convert);
                    return;
                }
                
                // ë¹„ë””ì˜¤ í”„ë ˆì„ì„ ìº”ë²„ìŠ¤ì— ê·¸ë¦¬ê¸°
                ctx.drawImage(video, 0, 0, canvas.width, canvas.height);
                
                // ASCIIë¡œ ë³€í™˜
                const ascii = videoToAscii();
                asciiOutput.textContent = ascii;
                
                animationId = requestAnimationFrame(convert);
            }
            convert();
        }
        
        function videoToAscii() {
            const resolution = parseInt(resolutionSlider.value);
            const aspectRatio = canvas.width / canvas.height;
            
            // ASCII ì¶œë ¥ í¬ê¸° ê³„ì‚° (ê°€ë¡œì„¸ë¡œ ë¹„ìœ¨ ìœ ì§€)
            const asciiWidth = resolution;
            const asciiHeight = Math.floor(resolution / aspectRatio / 2); // ë†’ì´ë¥¼ ì ˆë°˜ìœ¼ë¡œ (ë¬¸ìì˜ ì„¸ë¡œê°€ ê°€ë¡œë³´ë‹¤ ê¸¸ì–´ì„œ)
            
            // ì´ë¯¸ì§€ ë°ì´í„° ê°€ì ¸ì˜¤ê¸°
            const imageData = ctx.getImageData(0, 0, canvas.width, canvas.height);
            const pixels = imageData.data;
            
            let ascii = '';
            
            for (let y = 0; y < asciiHeight; y++) {
                for (let x = 0; x < asciiWidth; x++) {
                    // ì›ë³¸ ì´ë¯¸ì§€ì—ì„œ ìƒ˜í”Œë§í•  ì¢Œí‘œ ê³„ì‚°
                    const srcX = Math.floor((x / asciiWidth) * canvas.width);
                    const srcY = Math.floor((y / asciiHeight) * canvas.height);
                    
                    // í”½ì…€ ì¸ë±ìŠ¤ ê³„ì‚°
                    const pixelIndex = (srcY * canvas.width + srcX) * 4;
                    
                    // RGBë¥¼ grayscaleë¡œ ë³€í™˜
                    const r = pixels[pixelIndex];
                    const g = pixels[pixelIndex + 1];
                    const b = pixels[pixelIndex + 2];
                    const gray = Math.floor(0.299 * r + 0.587 * g + 0.114 * b);
                    
                    // grayscale ê°’ì„ ASCII ë¬¸ì ì¸ë±ìŠ¤ë¡œ ë³€í™˜
                    const asciiIndex = Math.floor((gray / 255) * (asciiChars.length - 1));
                    ascii += asciiChars[asciiIndex];
                }
                ascii += '\n';
            }
            
            return ascii;
        }
        
        // í˜ì´ì§€ ë– ë‚  ë•Œ ì¹´ë©”ë¼ ì •ë¦¬
        window.addEventListener('beforeunload', () => {
            stopCamera();
        });
        
        // í™”ë©´ ë°©í–¥ ë³€ê²½ ì‹œ ì¬ì¡°ì •
        window.addEventListener('orientationchange', () => {
